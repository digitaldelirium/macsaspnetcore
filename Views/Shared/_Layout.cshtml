@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" http-equiv="Content-Type" content="text/html" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mac's Camping Area, LLC</title>

    <environment names="Development">
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.css" rel="stylesheet" crossorigin="anonymous" />        
        <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
        <link rel="stylesheet" href="~/css/theme.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="~/css/theme.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>
    @RenderSection("header", required: false)
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<!-- Create ViewData.onLoad to for calling out body script loading on page for Contact View -->

<body onload="@ViewBag.onLoad">

<script>
    window.fbAsyncInit = function() {
        FB.init({
            appId      : '101842023547502',
            cookie     : true,
            xfbml      : true,
            version    : 'v2.12'
        });
      
        FB.AppEvents.logPageView();   
      
    };

    (function(d, s, id){
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {return;}
        js = d.createElement(s); js.id = id;
        js.src = "https://connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
</script>
<nav class="navbar navbar-expand-lg">
    <a href="#" class="navbar-brand">Mac's Camping Area</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar" aria-controls="collapsibleNavbar" aria-expanded="false" aria-label="Toggle Navigation" (click)="isCollapsed = !isCollapsed">
        <span class="navbar-toggler-icon"><i class="fas fa-bars"></i></span>
        <span class="sr-only">Toggle Navigation</span>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Activities">Activities</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Amenities">Amenities</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Rates">Rates</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="RV">RV Rentals</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" onclick="(function() { var win = window.open('https://www.flickr.com/photos/macscampingarea/sets/', '_blank');win.focus(); })()">Flickr Library</a>
            </li>
            @await Html.PartialAsync("_LoginPartial")
        </ul>
    </div>
</nav>
<div class="body-content container">
    <h1 style="text-align: center;">@ViewData["Title"]</h1>
    @RenderBody()
    <div class="row px-4">
        @RenderSection("TopPane", false)
    </div>
    <div>
        <div id="contentPane1 row px-4">
            <div id="topLeft" class="col-md-4">@RenderSection("TopLeft", false)</div>
            <div id="topCenter" class="col-md-4">@RenderSection("TopCenter", false)</div>
            <div id="altUi" class="hidden">@RenderSection("AltUi", false)</div>
            <div id="topRight" class="col-md-4">@RenderSection("TopRight", false)</div>
        </div>
        <div class="row">
            <div id="contentPane2" class="">
                <div id="midLeft" class="col" style="display: none;">@RenderSection("MidLeft", false)</div>
                <div id="midCenter" class="col" style="display: none;">@RenderSection("MidCenter", false)</div>
                <div id="midRight" class="col" style="display: none;">@RenderSection("MidRight", false)</div>
            </div>
        </div>
        <div class="row">
            <div id="contentPane3" class="panel panel-group">
                <div id="bottomLeft" class="col" style="display: none;">@RenderSection("BottomLeft", false)</div>
                <div id="bottomCenter" class="col" style="display: none;">@RenderSection("BottomCenter", false)</div>
                <div id="bottomRight" class="col" style="display: none;">@RenderSection("BottomRight", false)</div>
            </div>
            <div id="bottomPane" class="row container-fluid">@RenderSection("BottomPane", false)</div>
        </div>
        <footer>
            <p>&copy; 2018 - Mac's Camping Area, LLC</p>
        </footer>
    </div>
</div>
<environment names="Development">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.20.1/moment.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.0/slick.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</environment>
<environment names="Staging,Production">
    <script async src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js" asp-fallback-src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.4.min.js" asp-fallback-test="window.jQuery"></script>
    <script async src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script async src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script async src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
    <script async src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.16.0/moment.min.js"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
</environment>

@RenderSection("scripts", required: false)
</body>

</html>