                            </div>                         
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src="@Url.Content("~/images/lilypad/" + image)" alt="Slide show picture of lily pad rental" class="img-fluid centered"/>
                            </div>                            
                        }
                        x++;
                    }
                    </div>
                    <ol class="carousel-indicators">
                        @for(int y = 0; y < ViewBag.ImageList2.Count; y++){
                            if(y == 0){
                                <li data-target="#lilypad" data-slide-to="@y" class="active" ></li>
                            }
                            else {
                                <li data-target="#lilypad" data-slide-to="@y" ></li>
                            }
